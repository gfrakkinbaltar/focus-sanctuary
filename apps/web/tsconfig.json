{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core": ["../../packages/core/src/index.ts"],
      "@core/*": ["../../packages/core/src/*"],
      "@three": ["../../packages/three/src/index.ts"],
      "@three/*": ["../../packages/three/src/*"],
      "@audio": ["../../packages/audio/src/index.ts"],
      "@audio/*": ["../../packages/audio/src/*"],
      "@database": ["../../packages/database/src/index.ts"],
      "@database/*": ["../../packages/database/src/*"],
      "@ui": ["../../packages/ui/src/index.ts"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@focus-sanctuary/core": ["../../packages/core/src/index.ts"],
      "@focus-sanctuary/three": ["../../packages/three/src/index.ts"],
      "@focus-sanctuary/audio": ["../../packages/audio/src/index.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
